<h1>Task App</h1>

<% if user_signed_in? %>
  <div class="flex-col">
    <div class="flex-row">
      <h4 class="margin-less">Hello <%= current_user.name %></h1>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
    </div>
    <div class="flex-row">
      <% if policy(Task).create? %>
        <%= link_to "Create New Task", new_task_path%>
      <% end %>
      <% if policy(Task).index? %>
        <%= link_to "All Task", tasks_path%>
      <% end %>
      <% if policy(current_user.tasks).user_tasks? %>
        <%= link_to "User Tasks", user_tasks_tasks_path%>
      <% end %>
    </div>
  </div>
<% else %>
  <%= link_to "Sign In", new_user_session_path %>
  <h4 class="margin-less">SignUp Or Login To Continue</h1>
<% end %>

